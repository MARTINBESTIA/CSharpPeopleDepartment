<Window x:Class="WpfApp1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp1"
        mc:Ignorable="d"
        Title="My First WPF App" Height="250" Width="400" Background="#FFB9EAE0">

    <StackPanel>
        <Button Margin="5" HorizontalAlignment="Left" Click="Button_Click" Height="63" Width="150">
            <StackPanel Orientation="Horizontal">
                <Image x:Name="image"  Height="30" Width="30" Source="https://upload.wikimedia.org/wikipedia/commons/thumb/8/85/Smiley.svg/150px-Smiley.svg.png"/>
                <TextBlock VerticalAlignment="Center" x:Name="text" Text="Hello World"/>
            </StackPanel>
        </Button>
        <Button Margin="5" HorizontalAlignment="Left" Click="Button_Click_1"  Height="30" Width="150">
            <TextBlock VerticalAlignment="Center" x:Name="text2" Text="Change background color"/>
        </Button>
        <Grid Height="100">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition/>
                <RowDefinition />
            </Grid.RowDefinitions>
        </Grid>
        
        
    </StackPanel>
</Window>
