<Window x:Class="PeopleDepartment.EditorWpfApp.AddPersonDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PeopleDepartment.EditorWpfApp"
        mc:Ignorable="d"
        Title="AddPersonDialog" Height="300" Width="200" ResizeMode="NoResize" WindowStartupLocation="CenterScreen">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="6" />
            <ColumnDefinition Width="79.87"/>
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <Label Content="Display Name:" Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="3" Margin="0,0,114,31" Grid.RowSpan="2" />
        <Label Content="Title before:" Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="3" Margin="0,0,114,0" />
        <Label Content="First Name:" Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="3" Margin="0,31,114,31" Grid.RowSpan="3" />
        <Label Content="Last Name:" Grid.Row="3" Grid.Column="0" Grid.ColumnSpan="3" Margin="0,0,114,0" />
        <Label Content="Title after:" Grid.Row="3" Grid.Column="0" Grid.ColumnSpan="3" Margin="0,31,114,31" Grid.RowSpan="3" />
        <Label Content="Email:" Grid.Row="5" Grid.Column="0" Grid.ColumnSpan="3" Margin="0,0,114,0" />
        <Label Content="Position:" Grid.Row="5" Grid.Column="0" Grid.ColumnSpan="3" Margin="0,31,114,31" Grid.RowSpan="3" />
        <Label Content="Department:" Grid.Row="7" Grid.Column="0" Grid.ColumnSpan="3" Margin="0,0,114,0" />

        <TextBox  Width="110" Height="22" Grid.Row="0" Grid.Column="2" Margin="2,5,2,5"/>
        <TextBox  Width="110" Height="22" Grid.Row="1" Grid.Column="2" Margin="2,4,2,5"/>
        <TextBox  Width="110" Height="22" Grid.Row="2" Grid.Column="2" Margin="2,5,2,5"/>
        <TextBox  Width="110" Height="22" Grid.Row="3" Grid.Column="2" Margin="2,4,2,5"/>
        <TextBox  Width="110" Height="22" Grid.Row="4" Grid.Column="2" Margin="2,5,2,5"/>
        <TextBox  Width="110" Height="22" Grid.Row="5" Grid.Column="2" Margin="2,5,2,4"/>
        <TextBox  Width="110" Height="22" Grid.Row="6" Grid.Column="2" Margin="2,5,2,5"/>
        <TextBox  Width="110" Height="22" Grid.Row="7" Grid.Column="2" Margin="2,5,2,4"/>
        <StackPanel Grid.Row="7" Grid.Column="2" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,31,0,0" Grid.RowSpan="2">
            <Button Content="OK" Width="50" Height="25" Margin="4" Click="Ok_Click"/>
            <Button Content="Cancel" Width="50" Height="25" Margin="4" Click="Cancel_Click"/>
        </StackPanel>

    </Grid>

</Window>
