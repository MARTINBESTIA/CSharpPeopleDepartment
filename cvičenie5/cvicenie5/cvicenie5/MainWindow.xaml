<Window x:Class="cvicenie5.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:cvicenie5"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">

    <Grid>
        <TextBox x:Name="myTextBox" />
        <Button x:Name="myButton" Click="MyButton_Click" Margin="50,0,0,0">
            <StackPanel Orientation="Vertical" VerticalAlignment="Center" HorizontalAlignment="Left">
                <Image Source="https://upload.wikimedia.org/wikipedia/commons/thumb/8/85/Smiley.svg/150px-Smiley.svg.png" Width="50" Height="50">
                </Image>
                <TextBlock Text="SMILEEE" HorizontalAlignment="Right" FontSize="10" VerticalAlignment="Center" >
                </TextBlock>
            </StackPanel>
        </Button>
        <Button x:Name="changeColorButton" Content="Change the color of the background" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="50,50,0,0" Click="SwapColorOnBackground">

        </Button>
        <ListBox x:Name="personListBox" VerticalAlignment="Bottom" Height="150" Width="600" Margin="67,0,133,31"/>
        <Button x:Name="addButton" VerticalAlignment="Bottom" HorizontalAlignment="Right" Width="100" Height="50" Margin="0,0,18,131" Content="Add person" Click="AddPersonClick">

        </Button>
    
    </Grid>
</Window>

